rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to logos and admin photos
    match /logos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /admin_photos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default deny for all other paths
    match /{allOtherPaths=**} {
      allow read, write: if false;
    }
  }
}
