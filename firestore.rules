
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSuperAdmin() {
      return request.auth.token.superadmin == true;
    }

    function isOrganizationMember(orgId) {
      return request.auth != null && request.auth.token.organizationId == orgId;
    }

    function isAdmin(orgId) {
        return isOrganizationMember(orgId) && request.auth.token.admin == true;
    }

    match /organizations/{orgId} {
      allow read: if isSuperAdmin() || isAdmin(orgId);
      allow write: if isSuperAdmin(); // Only superadmins can create/update orgs directly
    }

    match /academicPeriods/{periodId} {
      allow read: if isOrganizationMember(resource.data.organizationId);
      allow create: if isAdmin(request.resource.data.organizationId);
      allow update, delete: if isAdmin(resource.data.organizationId);
    }
    
    match /gradingSystems/{systemId} {
      allow read: if isOrganizationMember(resource.data.organizationId);
      allow create: if isAdmin(request.resource.data.organizationId);
      allow update, delete: if isAdmin(resource.data.organizationId);
    }

    match /grades/{gradeId} {
      allow read: if isOrganizationMember(resource.data.organizationId);
      allow create: if isAdmin(request.resource.data.organizationId);
      allow update, delete: if isAdmin(resource.data.organizationId);
    }

    match /subjects/{subjectId} {
      allow read: if isOrganizationMember(resource.data.organizationId);
      allow create: if isAdmin(request.resource.data.organizationId);
      allow update, delete: if isAdmin(resource.data.organizationId);
    }

    match /teachers/{teacherId} {
      allow read: if isOrganizationMember(resource.data.organizationId);
      // Write is handled by Cloud Function
    }
    
    match /students/{studentId} {
      allow read: if isOrganizationMember(resource.data.organizationId);
       // Write is handled by Cloud Function
    }

    match /academicLoads/{loadId} {
       allow read, write: if isOrganizationMember(request.resource.data.organizationId);
    }

    match /performanceIndicators/{docId} {
      allow read: if isOrganizationMember(resource.data.organizationId);
      // Write is handled exclusively by the savePerformanceIndicators Cloud Function
    }
  }
}
