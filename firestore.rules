rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user belongs to an organization
    function isOrganizationMember(orgId) {
      return request.auth.token.organizationId == orgId;
    }

    // Organizations can only be read by superadmins (via Cloud Function)
    match /organizations/{orgId} {
      allow read, write: if request.auth.token.superadmin == true;
    }

    // Academic Periods can be read by any member of the organization.
    // Writes are handled by a secure Cloud Function.
    match /academicPeriods/{periodId} {
        allow read: if isOrganizationMember(resource.data.organizationId);
        allow write: if false; // Writes only through Cloud Function
    }

    // Grading Systems can be read by any member of the organization.
    // Writes are handled by a secure Cloud Function.
    match /gradingSystems/{systemId} {
        allow read: if isOrganizationMember(resource.data.organizationId);
        allow write: if false; // Writes only through Cloud Function
    }

    // Grades can be read by any member of the organization.
    // Writes are handled by a secure Cloud Function.
    match /grades/{gradeId} {
        allow read: if isOrganizationMember(resource.data.organizationId);
        allow write: if false; // Writes only through Cloud Function
    }

    // Subjects can be read by any member of the organization.
    // Writes are handled by a secure Cloud Function.
    match /subjects/{subjectId} {
        allow read: if isOrganizationMember(resource.data.organizationId);
        allow write: if false; // Writes only through Cloud Function
    }

    // Teachers can be read by any member of the organization.
    // Writes are handled by a secure Cloud Function.
    match /teachers/{teacherId} {
      allow read: if isOrganizationMember(resource.data.organizationId);
      allow write: if false;
    }

    // Students can be read by any member of the organization.
    // Writes are handled by a secure Cloud Function.
    match /students/{studentId} {
      allow read: if isOrganizationMember(resource.data.organizationId);
      allow write: if false;
    }
    
    // Academic Loads can be read by any member of the organization.
    // Writes/Deletes are handled by a secure Cloud Function.
    match /academicLoads/{loadId} {
        allow read: if isOrganizationMember(resource.data.organizationId);
        allow write: if false;
    }

    // Performance Indicators can be read by any member of the organization.
    // Writes are handled by a secure Cloud Function.
    match /performanceIndicators/{indicatorId} {
      allow read: if isOrganizationMember(resource.data.organizationId);
      allow write: if false;
    }

  }
}
